{% extends "base.html.j2" %}
{% block title %}{{ category }} - {{ SITENAME }}{% endblock %}
{% block meta %}
<meta name="author" content="{{ AUTHOR }}" />
<meta name="keywords" content="{{ category }}" />
{% endblock %}

{% block content %}
<div class="col-12 col-md-9 float-left content">


<div class="page-info">
	<span>Posts categorized under: {{ category }}</span>
</div>

{% for article in articles %}
<div class="post">
	{% include 'metadata.html.j2' %}
	<div class="post-item post-summary markdown-body">
		{{ article.summary }}
		<a href="{{ SITEURL }}/{{ article.url }}">read more â†’</a>
	</div>
</div>
{% endfor %}
</div>
{% endblock %}
