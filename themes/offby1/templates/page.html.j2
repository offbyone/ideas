{% extends "base.html.j2" %}

{% block title %}{{ page.title }} - {{ SITENAME }}{% endblock %}
{% block description %}{{ (page.summary or page.content) | striptags | e | truncate(160) }}{% endblock %}

{% block og_title %}{{ page.title }}{% endblock %}
{% block og_description %}{{ (page.summary or page.content) | striptags | e | truncate(160) }}{% endblock %}
{% block og_url %}{{ SITEURL }}/{{ page.url }}{% endblock %}

{% block body_class %}page{% endblock %}

{% block content %}
<article class="single-article">
    <header>
        <h1>{{ page.title }}</h1>
        {% if page.modified %}
        <div class="article-meta">
            <span>Updated: <time datetime="{{ page.modified.isoformat() }}">{{ page.modified.strftime('%B %d, %Y') }}</time></span>
        </div>
        {% endif %}
    </header>
    
    <div class="article-content">
        {{ page.content }}
    </div>
</article>
{% endblock %}
